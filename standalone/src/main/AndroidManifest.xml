<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bammellab.standalone"
    tools:ignore="GoogleAppIndexingWarning">
    <!-- We require OpenGL ES 2.0 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.bammellab.standalone.StandaloneApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        tools:ignore="AllowBackup">
        <activity
            android:name="com.bammellab.standalone.ActivityDisplayPdbFile"
            android:label="@string/activity_load_pdb_file_title"
            android:theme="@style/Theme.DesignDemo2" />
        <!--
               Don't override application title. See http://stackoverflow.com/questions/3462431/how-to-name-android-application
              We will set this in code instead.
        -->
        <activity
            android:name="com.bammellab.standalone.StandaloneFilePermissionActivity"
            android:label="@string/activity_file_permission_please"
            android:noHistory="true"
            android:theme="@style/Theme.DesignDemo2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>